package com.formacion.springboot.item.services;

import java.util.Arrays;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import com.formacion.springboot.item.entities.Item;
import com.formacion.springboot.item.entities.Producto;

@Service
public class ItemServiceImpl implements ItemService {

	@Autowired
	private RestTemplate clienteRest;

	@Override
	public List<Item> findAll() {
		//Obtenemos productos desde la bbdd accediendo desde el microservicio de productos.
		List<Producto> productos = Arrays.asList(clienteRest.getForObject("http://localhost:8001/listar",Producto[].class));
		productos.stream().map(p -> new Item(p,1));
		return null;
	}

	@Override
	public Item findById(Long id) {
		return null;
	}

}
